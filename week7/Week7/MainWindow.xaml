<Window x:Class="Week7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week7"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" Margin="442,0,0,0" VerticalAlignment="Top" Width="75" Click="Add_Click"/>
        <TextBox x:Name="tasknames" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="442"/>
        <ListView x:Name="Namelist" HorizontalAlignment="Left" Height="164" Margin="25,64,0,0" VerticalAlignment="Top" Width="176" SelectionChanged="Namelist_SelectionChanged">

        </ListView>
        <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="442,41,0,0" VerticalAlignment="Top" Width="75" Click="Delete_Click"/>
        <Button x:Name="Edit" Content="Edit" HorizontalAlignment="Left" Margin="442,84,0,0" VerticalAlignment="Top" Width="75" Click="Edit_Click"/>

    </Grid>
</Window>
